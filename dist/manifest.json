{
  "manifest_version": 2,
  "name": "Tab killer",
  "description": "Tab killer",
  "homepage_url": "https://github.com/nandomoreirame",
  "version": "1.0.0",
  "applications": {
    "gecko": {
      "id": "tabkiller@tabkiller.com",
      "strict_min_version": "45.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-48.png",
    "default_title": "Tab killer"
  },
  "icons": {
    "16" : "images/icon-16.png",
    "48" : "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "https://www.googleapis.com/",
    "*://*.cloudflare.com/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
